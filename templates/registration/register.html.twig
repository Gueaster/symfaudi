{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<!-- SECTION - START -->

<section class="page-form">

    <h2>Inscription</h2>

    {{ form_start(registrationForm) }}
        <fieldset>
            <legend>{{ form_label(registrationForm.email) }}</legend>
            {{ form_widget(registrationForm.email) }}
            {{ form_errors(registrationForm.email) }}
            {{ form_help(registrationForm.email) }}
        </fieldset>
        <fieldset>
            <legend>{{ form_label(registrationForm.plainPassword) }}</legend>
            {{ form_widget(registrationForm.plainPassword) }}
            {{ form_errors(registrationForm.plainPassword) }}
            {{ form_help(registrationForm.plainPassword) }}
        </fieldset>
        <fieldset>
            <legend>{{ form_label(registrationForm.agreeTerms) }}</legend>
            J'ai lu et j'accepte les termes et conditions du site
            {{ form_widget(registrationForm.agreeTerms) }}
            {{ form_errors(registrationForm.agreeTerms) }}
            {{ form_help(registrationForm.agreeTerms) }}
        </fieldset>

        <button class="btn">Register</button>
    {{ form_end(registrationForm) }}
</section>

<!-- SECTION - END -->
{% endblock %}
